{
    "name": "cleannote",
    "description": "a simple way to quickly take notes while browsing.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/512x512.png"
        }
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl + Shift + L"
            }
        }
    },
    "icons": {
        "128": "icons/512x512.png"
    }
}